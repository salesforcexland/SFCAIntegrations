{
  "manifestVersion": 1,
  "id": "salesforce-code-analyzer-ado-repos-task-dev",
  "name": "Salesforce Code Analyzer Task (DEV)",
  "version": "1.2.15",
  "publisher": "SamCrossland",
  "description": "Custom task to run Salesforce Code Analyzer v5 against PRs or full branches in Azure DevOps (Cloud).",
  "categories": [ "Azure Pipelines" ],
  "content": {
    "details": {
      "path": "overview.md"
    }
  },
  "tags": [
      "salesforce",
      "code-analysis",
      "azure-pipelines",
      "pull-request-checks",
      "code analyzer"
  ],
  "links": {
    "repository": {
      "uri": "https://github.com/salesforcexland/SFCAIntegrations"
    },
    "support": {
      "uri": "https://devopslaunchpad.com/blog/salesforce-code-analyzer/"
    }
  },
  "repository": {
        "type": "git",
        "uri": "https://github.com/salesforcexland/SFCAIntegrations"
  },
  "targets": [
    { 
      "id": "Microsoft.VisualStudio.Services.Cloud" 
    }
  ],
  "galleryFlags": [
    "AzureDevOps"
  ],
  "icons": {
    "default": "icon.png"
  },
  "branding": {
    "color": "gray",
    "theme": "dark"
  },
  "files": [
    {
      "path": "run-salesforce-code-analyzer-dev",
      "addressable": true
    },
    {
      "path": "images",
      "addressable": true
    }
  ],
  "contributions": [
    {
      "id": "run-salesforce-code-analyzer-dev",
      "type": "ms.vss-distributed-task.task",
      "targets": [ "ms.vss-distributed-task.tasks" ],
      "properties": {
        "name": "run-salesforce-code-analyzer-dev"
      }
    }
  ]
}