{
  "manifestVersion": 1,
  "id": "salesforce-code-analyzer-ado-repos-task",
  "name": "Salesforce Code Analyzer PR Task",
  "version": "0.2.16",
  "publisher": "SamCrossland",
  "description": "Custom task to run Salesforce Code Analyzer v5 against PR delta files in Azure DevOps.",
  "categories": [ "Azure Pipelines" ],
  "content": {
    "details": {
      "path": "overview.md"
    }
  },
  "tags": [
      "salesforce",
      "code-analysis",
      "azure-pipelines",
      "pull-request-checks",
      "code analyzer"
  ],
  "links": {
    "repository": {
      "uri": "https://github.com/sam-gearset/SFCAIntegrations/tree/feature/SFCAADO-CustomTask-SplitAndV1"
    },
    "support": {
      "uri": "https://devopslaunchpad.com/blog/salesforce-code-analyzer/"
    }
  },
  "repository": {
        "type": "git",
        "uri": "https://github.com/sam-gearset/SFCAIntegrations/tree/feature/SFCAADO-CustomTask-SplitAndV1"
  },
  "targets": [
    { "id": "Microsoft.VisualStudio.Services" }
  ],
  "galleryFlags": [
    "AzureDevOps"
  ],
  "icons": {
    "default": "icon.png"
  },
  "branding": {
    "color": "gray",
    "theme": "dark"
  },
  "files": [
    {
      "path": "run-salesforce-code-analyzer",
      "addressable": true
    }
  ],
  "contributions": [
    {
      "id": "run-salesforce-code-analyzer",
      "type": "ms.vss-distributed-task.task",
      "targets": [ "ms.vss-distributed-task.tasks" ],
      "properties": {
        "name": "run-salesforce-code-analyzer"
      }
    }
  ]
}